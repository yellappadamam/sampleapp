<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_title_textsize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="item_desc_style">
        <item name="android:textSize">@dimen/item_desc_textsize</item>
        <item name="android:textColor">@color/item_desc_color</item>
    </style>


</resources>
